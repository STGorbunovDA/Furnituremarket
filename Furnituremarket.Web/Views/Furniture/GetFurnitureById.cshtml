@model Furnituremarket.Domain.Model.Furniture

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div style="padding: 10px;"></div>
<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="https://pic.rutubelist.ru/video/29/07/2907a08a46f27a33198bfbc9e5fb0402.jpg"
                 class="img-fluid rounded-start" alt="@Model?.Name">
        </div>
        <div class="col-md-4">
            <div class="card-body">
                <h5 class="card-title text-center">@Model?.Name</h5>
                <p class="card-text"><b>Описание: </b>@Model?.Description</p>
                <p class="card-text"><b>Стоимость: </b>@Model?.Price ₽</p>
                <p class="card-text"><b>Материал: </b>@Model?.Material</p>
                <p class="card-text"><b>Цвет: </b>@Model.Color</p>
                <p class="card-text"><small class="text-muted">Дата выпуска - @Model?.DateCreate</small></p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card-body">
                <p class="card-text"><b>Описание: </b>@Model?.Description</p>
            </div>
        </div>
    </div>
</div>